@page
@model SFA.DAS.ApprenticePortal.Web.Pages.HomeModel
@using SFA.DAS.ApprenticePortal.SharedUi.Identity
@{ ViewData["Title"] = "Welcome"; }

@section Head {
    <link href="~/css/homepage.css" media="screen" rel="stylesheet" no-cdn />
}

<div class="dashboard-page">
    <div class="govuk-width-container">
        <div class="govuk-grid-row dashboard-title">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    Welcome, @User.FullName()
                    <span class="govuk-caption-m">@Model.CourseName</span>
                </h1>
            </div>
        </div>
    </div>
</div>

<main class="govuk-main-wrapper--autosspacing homepage" id="main-content" role="main">

    <partial name="_HomeNotifications" />

    <div class="govuk-width-container" id="dashboard-section">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <ul class="dashboard-nav dashboard-li">
                    <li>
                        <h2 class="govuk-heading-s">Confirm my apprenticeship details</h2>
                        <p>View your <a asp-external-section="ConfirmMyApprenticeship" asp-external-page="Apprenticeships">current apprenticeship details</a> and understand what to expect during your apprenticeship.</p>                      
                    </li>
                    <li>
                        <h2 class="govuk-heading-s">Help and support</h2>
                        <p>If you have any questions or need support during your apprenticeship, guidance can be found in the <a asp-page="HelpAndSupport" model="Model">help and support section</a>.</p>                        
                    </li>
                </ul>
            </div>
        </div>
    </div>
</main>