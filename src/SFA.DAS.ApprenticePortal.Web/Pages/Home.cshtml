@page
@model SFA.DAS.ApprenticePortal.Web.Pages.HomeModel
@using SFA.DAS.ApprenticePortal.Authentication
@using SFA.DAS.ApprenticePortal.Web.Models
@{
    ViewData["Title"] = "Welcome";
}



<div class="dashboard-page">
    <div class="govuk-width-container">
        <div class="govuk-grid-row dashboard-title">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-l">
                    Welcome, @User.FullName()
                    <span class="govuk-caption-m">@Model.HomePageModel?.CourseName</span>
                </h1>
            </div>
        </div>
    </div>
</div>

<main class="govuk-main-wrapper--autosspacing homepage" id="main-content" role="main">

    <partial name="_HomeNotifications" , model=@Model />

    <div class="govuk-width-container" id="dashboard-section">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <ul class="dashboard-nav dashboard-li">
                    <li asp-for-external-section="ConfirmMyApprenticeship">

                        <h2 class="govuk-heading-m">Confirm my apprenticeship details</h2>
                        @if (Model.HomePageModel.Status() == ApprenticeshipStatus.Stopped)
                        {
                            <strong class="dashboard__status-tag govuk-tag app-tag--dark-grey">Stopped</strong>
                        }
                        else if (Model.HomePageModel.Status() == ApprenticeshipStatus.Complete)
                        {
                            <strong class="dashboard__status-tag govuk-tag govuk-tag--green">Complete</strong>
                        }
                        else if (Model.HomePageModel.Status() == ApprenticeshipStatus.Incomplete)
                        {
                            <strong class="dashboard__status-tag govuk-tag govuk-tag--yellow">Incomplete</strong>
                        }

                        <p>View your current apprenticeship details and understand what to expect during your apprenticeship.</p>
                        <p><a class="govuk-link govuk-link--no-visited-state" asp-external-section="ConfirmMyApprenticeship" asp-external-page="Apprenticeships">Confirm your apprenticeship now</a></p>
                    </li>
                    <li asp-for-external-section="ApprenticeFeedback">
                        <h2 class="govuk-heading-m">Feedback on your training provider</h2>
                        <p>Let us know how you're getting on with your apprenticeship and how your training provider can improve to help other apprentices.</p>
                        <p><a class="govuk-link govuk-link--no-visited-state" asp-external-section="ApprenticeFeedback">Give feedback now</a></p>
                    </li>
                        </li>
                    }
                    <li>
                        <h2 class="govuk-heading-m">Help and support</h2>
                        <p>If you have any questions or need support during your apprenticeship, guidance can be found in the <a class="govuk-link govuk-link--no-visited-state" asp-page="HelpAndSupport" model="Model">help and support section</a>.</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</main>