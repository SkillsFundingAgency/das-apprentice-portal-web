@page
@model SFA.DAS.ApprenticePortal.Web.Pages.HomeModel
@using SFA.DAS.ApprenticePortal.SharedUi.Identity
@using SFA.DAS.ApprenticePortal.Web.Models
@{ ViewData["Title"] = "Welcome"; }

@section Head {
    <link href="~/css/homepage.css" media="screen" rel="stylesheet" no-cdn />
}

<div class="dashboard-page">
    <div class="govuk-width-container">
        <div class="govuk-grid-row dashboard-title">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    Welcome, @User.FullName()
                    <span class="govuk-caption-m">@Model.CurrentApprenticeship?.CourseName</span>
                </h1>
            </div>
        </div>
    </div>
</div>

<main class="govuk-main-wrapper--autosspacing homepage" id="main-content" role="main">

    <partial name="_HomeNotifications", model=@Model.CurrentApprenticeship />

    <div class="govuk-width-container" id="dashboard-section">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <ul class="dashboard-nav dashboard-li">
                    <li asp-for-external-section="ConfirmMyApprenticeship">

                        <h2 class="govuk-heading-m">Confirm my apprenticeship details</h2>
                        @if (Model.CurrentApprenticeship.Status() == ApprenticeshipStatus.Stopped)
                        {
                            <strong class="govuk-tag govuk-tag--grey">STOPPED</strong>
                        }
                        else if (Model.CurrentApprenticeship.Status() == ApprenticeshipStatus.Complete)
                        {
                            <strong class="govuk-tag govuk-tag--green">COMPLETE</strong>
                        }
                        else if (Model.CurrentApprenticeship.Status() == ApprenticeshipStatus.Incomplete)
                        {
                            <strong class="govuk-tag govuk-tag--yellow">INCOMPLETE</strong>
                        }

                        <p>View your current apprenticeship details and understand what to expect during your apprenticeship.</p>
                        <p><a class="govuk-link" asp-external-section="ConfirmMyApprenticeship" asp-external-page="Apprenticeships">Confirm your apprenticeship now</a></p>
                    </li>
                    <li>
                        <h2 class="govuk-heading-m">Help and support</h2>
                        <p>If you have any questions or need support during your apprenticeship, guidance can be found in the <a class="govuk-link" asp-page="HelpAndSupport" model="Model">help and support section</a>.</p>                        
                    </li>
                </ul>
            </div>
        </div>
    </div>
</main>