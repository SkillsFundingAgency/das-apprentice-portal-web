@page
@using Microsoft.AspNetCore.Http
@model SFA.DAS.ApprenticePortal.Web.Pages.HelpAndSupportModel
@{
    ViewData["Title"] = "Help and support";
}

@section BreadCrumbs
{
<a href="@Request.Headers["Referer"]" class="govuk-back-link">Back</a>
}

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                Help and support
            </h1>
            <p>
                If you have any questions or concerns, you should follow these four steps.
            </p>
            <div id="step-by-step-navigation" class="app-step-nav app-step-nav--large app-step-nav--active" data-show-text="Show" data-hide-text="Hide" data-show-all-text="Show all" data-hide-all-text="Hide all">
                <ol class="app-step-nav__steps">

                    <li class="app-step-nav__step js-step" id="find-answers-on-our-help-centre">
                        <div class="app-step-nav__header js-toggle-panel" data-position="1">
                            <h2 class="app-step-nav__title">
                                <span class="app-step-nav__circle app-step-nav__circle--number">
                                    <span class="app-step-nav__circle-inner">
                                        <span class="app-step-nav__circle-background">
                                            <span class="govuk-visually-hidden">Step</span> 1
                                        </span>
                                    </span>
                                </span>
                                <span class="js-step-title">
                                    <button class="app-step-nav__button app-step-nav__button--title js-step-title-button" aria-expanded="false" aria-controls="step-panel-check-our-help-center-1">
                                        <span class="js-step-title-text">
                                            Find answers on our Help centre
                                        </span><span class="app-step-nav__toggle-link js-toggle-link" aria-hidden="true" hidden="">Show</span>
                                    </button>
                                </span>
                            </h2>
                        </div>
                        <div class="app-step-nav__panel js-panel js-hidden" id="step-panel-check-our-help-center-1">
                            <p class="app-step-nav__paragraph">
                                The Help centre’s articles have information about:
                            </p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>your progress reviews </li>
                                <li>taking sick leave</li>
                                <li>your end-point assessment</li>
                                <li>redundancies</li>
                            </ul>
                        </div>
                    </li>

                    <li class="app-step-nav__step js-step" id="speak-to-your-training-provider">
                        <div class="app-step-nav__header js-toggle-panel" data-position="2">
                            <h2 class="app-step-nav__title">
                                <span class="app-step-nav__circle app-step-nav__circle--number">
                                    <span class="app-step-nav__circle-inner">
                                        <span class="app-step-nav__circle-background">
                                            <span class="govuk-visually-hidden">Step</span> 2
                                        </span>
                                    </span>
                                </span>
                                <span class="js-step-title">
                                    <button class="app-step-nav__button app-step-nav__button--title js-step-title-button" aria-expanded="false" aria-controls="step-panel-speak-to-your-training-provider-3">
                                        <span class="js-step-title-text">
                                            Speak to your training provider
                                        </span><span class="app-step-nav__toggle-link js-toggle-link" aria-hidden="true" hidden="">Show</span>
                                    </button>
                                </span>
                            </h2>
                        </div>
                        <div class="app-step-nav__panel js-panel js-hidden" id="step-panel-speak-to-your-training-provider-2">
                            <p class="app-step-nav__paragraph">
                                If you can’t resolve your questions or concerns with your employer, you should speak to your main contact at your training provider.
                            </p>
                            <p class="app-step-nav__paragraph">
                                Speak to them next time you do your off-the-job training or by:
                            </p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>phone</li>
                                <li>email</li>
                            </ul>
                            <p class="app-step-nav__paragraph">
                                If your question or concern is urgent, please make them aware.
                            </p>
                        </div>
                    </li>

                    <li class="app-step-nav__step js-step" id="speak-to-your-employer">
                        <div class="app-step-nav__header js-toggle-panel" data-position="3">
                            <h2 class="app-step-nav__title">
                                <span class="app-step-nav__circle app-step-nav__circle--number">
                                    <span class="app-step-nav__circle-inner">
                                        <span class="app-step-nav__circle-background">
                                            <span class="govuk-visually-hidden">Step</span> 3
                                        </span>
                                    </span>
                                </span>
                                <span class="js-step-title">
                                    <button class="app-step-nav__button app-step-nav__button--title js-step-title-button" aria-expanded="false" aria-controls="step-panel-speak-to-your-contact-3">
                                        <span class="js-step-title-text">
                                            Speak to your day-to-day contact at your employer
                                        </span><span class="app-step-nav__toggle-link js-toggle-link" aria-hidden="true" hidden="">Show</span>
                                    </button>
                                </span>
                            </h2>
                        </div>
                        <div class="app-step-nav__panel js-panel js-hidden" id="step-panel-speak-to-your-contact-2">
                            <p class="app-step-nav__paragraph">
                                You should have a day-to-day contact or manager who can answer any questions or concerns you may have. You can contact them by:
                            </p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>arranging a face-to-face meeting</li>
                                <li>phone</li>
                                <li>email</li>
                            </ul>
                        </div>
                    </li>

                    <li class="app-step-nav__step js-step" id="contact-esfa">
                        <div class="app-step-nav__header js-toggle-panel" data-position="4">
                            <h2 class="app-step-nav__title">
                                <span class="app-step-nav__circle app-step-nav__circle--number">
                                    <span class="app-step-nav__circle-inner">
                                        <span class="app-step-nav__circle-background">
                                            <span class="govuk-visually-hidden">Step</span> 4
                                        </span>
                                    </span>
                                </span>
                                <span class="js-step-title">
                                    <button class="app-step-nav__button app-step-nav__button--title js-step-title-button" aria-expanded="false" aria-controls="step-panel-still-have-concerns-4">
                                        <span class="js-step-title-text">
                                            Contact the Education Skills Funding Agency
                                        </span><span class="app-step-nav__toggle-link js-toggle-link" aria-hidden="true" hidden="">Show</span>
                                    </button>
                                </span>
                            </h2>
                        </div>
                        <div class="app-step-nav__panel js-panel js-hidden" id="step-panel-still-have-concerns-4">
                            <p class="app-step-nav__paragraph">
                                At the Education Skills Funding Agency, we’ll always take your complaints seriously.
                            </p>
                            <h3 class="govuk-heading-s">Telephone</h3>
                            <p class="govuk-body">
                                If you have a unique reference number, have it with you when you call.
                            </p>
                            <p class="govuk-body">
                                Available 8am to 8pm Monday to Friday. You can:
                            </p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>call us on 08000 150 600</li>
                                <li>text us on 07588 690018</li>
                            </ul>
                            <p class="govuk-body">
                                You cannot send us photos or videos via text.
                            </p>
                            <p class="govuk-body">
                                Your phone company may charge you separately, standard SMS rates apply.
                            </p>
                            <p class="govuk-body">
                                <a class="govuk-link" href="https://www.gov.uk/call-charges">Find out about call charges</a>
                            </p>
                            <h3 class="govuk-heading-s">Email</h3>
                            <p>
                                You can email us at <a href="mailto:helpdesk@manage-apprenticeships.service.gov.uk">helpdesk@manage-apprenticeships.service.gov.uk</a>.
                            </p>
                            <p class="app-step-nav__paragraph">
                                We aim to respond within 2 working days.
                            </p>
                        </div>
                    </li>

                </ol>
            </div>
            <a href="/home" class="govuk-button" data-module="govuk-button">
                Return to homepage
            </a>
        </div>
    </div>
</div>

@section DasScripts
{
    <script src="/js/step-by-step-nav.js" no-cdn></script>
}