@{
    ViewData["Title"] = "Confirm your apprenticeship";
}

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds govuk-body">

            <h1 class="govuk-heading-l">@ViewData["Title"]</h1>

            <div class="govuk-body">
                <p>Use this service to:</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>
                        Confirm the details of your apprenticeship
                    </li>
                </ul>

                <p>Confirming takes around 15 minutes.</p>
                <p>If you're looking for an apprenticeship use <a href="https://www.gov.uk/apply-apprenticeship">Find an apprenticeship</a>.</p>

                <a href="https://commitments.at-aas.apprenticeships.education.gov.uk/apprenticeships" 
                   role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" 
                         width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </a>
             </div>
         
            <h2 class="govuk-heading-m">Before you start</h2>

            <div class="govuk-body">
                <p>You will need to know the details of your apprenticeship, like</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>the names of your employer and training provider</li>
                    <li>the duration of your apprenticeship</li>
                    <li>your planned start and end dates</li>
                </ul>
            </div>

        </div>
    </div>
</div>
